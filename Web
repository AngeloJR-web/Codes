    <script>
        // Dados da Galeria (Simulando um Banco de Dados/API)
        const projectsData = [
            { title: "Cyber Structure", cat: "urban", img: "https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe" },
            { title: "Neon Nights", cat: "urban", img: "https://images.unsplash.com/photo-1633167606207-d840b5070fc2" },
            { title: "Abstract Flow", cat: "abstract", img: "https://images.unsplash.com/photo-1614850523296-d8c1af93d400" },
            { title: "Deep Void", cat: "abstract", img: "https://images.unsplash.com/photo-1618005198919-d3d4b5a92ead" },
            { title: "Metro Pulse", cat: "urban", img: "https://images.unsplash.com/photo-1514565131-fce0801e5785" },
            { title: "Liquid Gold", cat: "abstract", img: "https://images.unsplash.com/photo-1550684848-fac1c5b4e853" }
        ];

        const galleryGrid = document.getElementById('gallery-grid');

        // Função para Renderizar Galeria
        function renderGallery(filter = 'all') {
            galleryGrid.innerHTML = '';
            const filtered = filter === 'all' ? projectsData : projectsData.filter(p => p.cat === filter);
            
            filtered.forEach((p, index) => {
                const card = document.createElement('div');
                card.className = 'card';
                card.style.animation = `reveal 0.6s ease forwards ${index * 0.1}s`;
                card.innerHTML = `
                    <div class="card-img" style="background-image: url('${p.img}?auto=format&fit=crop&w=800&q=80')"></div>
                    <div class="card-info">
                        <h3>${p.title}</h3>
                        <p>${p.cat.toUpperCase()}</p>
                    </div>
                `;
                galleryGrid.appendChild(card);
            });
        }

        // Lógica dos Filtros
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelector('.filter-btn.active').classList.remove('active');
                e.target.classList.add('active');
                renderGallery(e.target.getAttribute('data-filter'));
            });
        });

        // Inicializar Galeria
        renderGallery();

        // Efeito de Envio do Formulário
        document.getElementById('contactForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const btn = e.target.querySelector('.submit-btn');
            btn.innerText = "ENVIANDO...";
            setTimeout(() => {
                btn.style.background = "#00ff88";
                btn.innerText = "MENSAGEM ENVIADA!";
                e.target.reset();
            }, 2000);
        });

        // --- LÓGICA DO CURSOR CUSTOMIZADO ---
        const cursorDot = document.querySelector('.cursor-dot');
        const cursorOutline = document.querySelector('.cursor-outline');

        // Movimento do Cursor
        window.addEventListener('mousemove', (e) => {
            const posX = e.clientX;
            const posY = e.clientY;

            // O ponto central segue o mouse instantaneamente
            cursorDot.style.left = `${posX}px`;
            cursorDot.style.top = `${posY}px`;

            // O anel externo segue com um leve atraso (delay) usando a API de Animação
            cursorOutline.animate({
                left: `${posX}px`,
                top: `${posY}px`
            }, { duration: 400, fill: "forwards" });
        });

        // Efeito Magnético nos elementos interativos
        const interativos = document.querySelectorAll('a, button, .card, input, textarea');
        
        interativos.forEach(elemento => {
            elemento.addEventListener('mouseenter', () => {
                cursorOutline.classList.add('hover-state');
            });
            elemento.addEventListener('mouseleave', () => {
                cursorOutline.classList.remove('hover-state');
            });
        });
    </script>
</body>
